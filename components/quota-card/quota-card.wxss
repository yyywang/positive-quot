/* components/quota-card/quota-card.wxss */
.quota-card {
  display: flex;
  flex-direction: column;
  padding: 10rpx 30rpx;
  background-color: #ffffff;
  /* border-top: 1rpx solid #c6c6c6;
  border-bottom: 1px solid #c6c6c6; */
  border-radius: 16rpx;
}

.quota-card>.content {
  line-height: 1.6em;
  max-height: 160rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}

.quota-card>.operator {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px 0;
}

.quota-card>.operator>.copy {
  font-size: 26rpx;
}

.quota-card>.operator>.btn-share {
  margin: 0;
  padding: 0;
  font-size: 26rpx;
  background-color: #ffffff;
  font-weight: normal;
  /* width: 28rpx;
  height: 28rpx; */
}